                        </td>
                        <td>@item.EquipmentTypeID</td>
                            <td class="text-justify">@item.Name</td>
                        <td class="centeredTd">

                            <SearchButtonComponent FormType="typeof(EquipmentType_Create)" ID="@item.EquipmentTypeID.ToString()" Type="edit" >
                            </SearchButtonComponent>
                        </td>
                        <td class="centeredTd">
                           <NavLink class="btn btn-success btn-sm" href="EquipementTypeCreate">Delete</NavLink>
                        
                        </td>
