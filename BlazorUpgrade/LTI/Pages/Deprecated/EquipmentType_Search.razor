</div>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-0">
        <nav class="navbar navbar-expand-lg">
            @*<a class="btn btn-primary" href="EquipmentTypeCreate/0">New</a>*@
            <SearchButtonComponent FormType="typeof(EquipmentType_Create)" ID="0" Type="new">
