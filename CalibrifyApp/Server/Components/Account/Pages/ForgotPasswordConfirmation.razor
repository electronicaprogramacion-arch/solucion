@page "/Account/ForgotPasswordConfirmation"
@layout CalibrifyApp.Server.Components.Account.Shared.LoginLayout

@inject NavigationManager NavigationManager

<PageTitle>Password Reset Sent</PageTitle>

<!-- Enhanced Password Reset Confirmation with Modern Layout -->
<div class="modern-login-container">
    <!-- Confirmation Section -->
    <div class="login-section">
        <div class="section-header">
            <h3 class="section-title">
                <i class="fas fa-check-circle" style="color: #38a169;"></i>
                Password Reset Sent
            </h3>
            <p class="section-subtitle">Check your email for further instructions</p>
        </div>

        <!-- Success Message -->
        <div class="alert alert-success" role="alert">
            <i class="fas fa-envelope me-2"></i>
            We've sent a password reset link to your email address. Please check your inbox and follow the instructions to reset your password.
        </div>

        <!-- Additional Information -->
        <div class="no-external-providers">
            <div class="no-providers-icon">
                <i class="fas fa-info-circle"></i>
            </div>
            <div class="no-providers-text">Didn't receive the email?</div>
            <div class="no-providers-subtext">
                Check your spam folder or try again in a few minutes. The link will expire in 24 hours for security reasons.
            </div>
        </div>

        <!-- Helper Links with JavaScript fallback -->
        <div class="helper-links">
            <a href="Account/Login" class="helper-link" onclick="window.location.href='Account/Login'; return false;">
                <i class="fas fa-arrow-left"></i>Back to Sign In
            </a>
            <a href="Account/ForgotPassword" class="helper-link" onclick="window.location.href='Account/ForgotPassword'; return false;">
                <i class="fas fa-redo"></i>Send another reset link
            </a>
        </div>
    </div>
</div>

@code {
    // This page doesn't need any code-behind logic
}
