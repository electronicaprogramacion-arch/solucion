@page "/Account/Manage/ChangePassword"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using CalibrifyApp.Server.Data
@using CalibrifyApp.Server.Extensions

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Change password</PageTitle>

<RadzenText TextStyle="TextStyle.H4" class="rz-mb-3">Change password</RadzenText>
<RadzenCard class="rz-p-4">
    <StatusMessage />
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="8" SizeLG="6">
            <EditForm Model="Input" FormName="change-password" OnValidSubmit="OnValidSubmitAsync" method="post" @ref="form">
                <DataAnnotationsValidator />
                <ValidationSummary class="rz-text-danger" role="alert" />
                <div class="rz-mb-3">
                    <RadzenLabel Text="Current password" Component="Input.OldPassword" />
                    <InputText type="password" @bind-Value="Input.OldPassword" id="Input.OldPassword" class="rz-textbox rz-display-block rz-width-100"
                               autocomplete="current-password" aria-required="true" />
                    <ValidationMessage For="() => Input.OldPassword" class="rz-text-danger" />
                </div>
                <div class="rz-mb-3">
                    <RadzenLabel Text="New password" Component="Input.NewPassword" />
                    <InputText type="password" @bind-Value="Input.NewPassword" id="Input.NewPassword" class="rz-textbox rz-display-block rz-width-100"
                               autocomplete="new-password" aria-required="true" />
                    <ValidationMessage For="() => Input.NewPassword" class="rz-text-danger" />
                </div>
                <div class="rz-mb-3">
                    <RadzenLabel Text="Confirm new password" Component="Input.ConfirmPassword" />
                    <InputText type="password" @bind-Value="Input.ConfirmPassword" id="Input.ConfirmPassword" class="rz-textbox rz-display-block rz-width-100"
                               autocomplete="new-password" aria-required="true" />
                    <ValidationMessage For="() => Input.ConfirmPassword" class="rz-text-danger" />
                </div>
                <RadzenButton ButtonType="ButtonType.Submit" Text="Update password" ButtonStyle="ButtonStyle.Primary" />
            </EditForm>
        </RadzenColumn>
    </RadzenRow>
</RadzenCard>

@code {
    private ApplicationUser user = default!;
    private EditContext? editContext;
    private EditForm? form;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        editContext = new EditContext(Input);
    }

    private async Task OnValidSubmitAsync()
    {
        var changePasswordResult = await UserManager.ChangePasswordAsync(user, Input.OldPassword, Input.NewPassword);
        if (!changePasswordResult.Succeeded)
        {
            foreach (var error in changePasswordResult.Errors)
            {
                editContext?.AddValidationMessage(editContext.Field(string.Empty), error.Description);
            }
            return;
        }

        await SignInManager.RefreshSignInAsync(user);
        RedirectManager.RedirectToCurrentPageWithStatus("Your password has been changed.", HttpContext);
    }

    private sealed class InputModel
    {
        [Required]
        [DataType(DataType.Password)]
        [Display(Name = "Current password")]
        public string OldPassword { get; set; } = "";

        [Required]
        [StringLength(100, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        [Display(Name = "New password")]
        public string NewPassword { get; set; } = "";

        [DataType(DataType.Password)]
        [Display(Name = "Confirm new password")]
        [Compare("NewPassword", ErrorMessage = "The new password and confirmation password do not match.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
