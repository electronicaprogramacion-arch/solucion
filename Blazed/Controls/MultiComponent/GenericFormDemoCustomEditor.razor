@using System.Diagnostics.CodeAnalysis
@inherits  InputBase<string>

<select @attributes="AdditionalAttributes"
        type="number"
        class="@CssClass"
        value="@CurrentValueAsString"
        @onchange="e => CurrentValueAsString = (string)e.Value">
    <option>0</option>
    <option>1</option>
   
</select>

@code {
    protected override string FormatValueAsString(string value)
    {
        return Convert.ToBoolean(value).ToString();//value ?? string.Empty;
    }

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        validationErrorMessage = null;
        
        result = Convert.ToBoolean(value).ToString(); //value ?? string.Empty;
        
        return true;
    }
}