@namespace Blazed.Controls
@if (ToastList.Any())
{
    @*<div class="blazored-toast-container @PositionClass">*@
    <CascadingValue Value=this>

        @{
            int i = 0;
            foreach (var toast in ToastList.OrderBy(x => x.TimeStamp))
            {
                <BlazoredToast @key="toast" ToastSettings="toast.ToastSettings" ToastId="toast.Id" Timeout="Timeout" CurrentPosition="@i" />
                i++;
            }
        }
    </CascadingValue>
    @*</div>*@
}