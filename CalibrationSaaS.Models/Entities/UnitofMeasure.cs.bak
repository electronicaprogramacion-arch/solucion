        [DataMember(Order = 2)]
        public string Name { get ; set ; }

        [DataMember(Order = 3)]
        public string Description { get ; set ; }


        [DataMember(Order = 4)]
        public int? CalibrationTypeID { get; set; }

        




    }


}
