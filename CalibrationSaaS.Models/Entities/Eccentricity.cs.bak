            }
        }
        [NotMapped]
        public double EccentricityTotalUncertainty
        {
            get
            {
                return Math.Sqrt(EccentricitySquare);
            }
        }
        [NotMapped]
        public double EccentricityExpandedUncertainty
        {
            get
            {
                return EccentricityTotalUncertainty * 2;
