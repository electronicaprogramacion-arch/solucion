@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization
@using System.Linq

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new[] { typeof(App).Assembly }">
    <Found Context="routeData">
        @{
            Console.WriteLine($"Route found: {routeData.PageType?.Name}, Parameters: {string.Join(", ", routeData.RouteValues.Select(kv => $"{kv.Key}={kv.Value}"))}");
        }
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        @{
            Console.WriteLine($"Route NOT found for URL: {NavigationManager.ToBaseRelativePath(NavigationManager.Uri)}");
        }
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="page-not-found">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center">
                            <h1 class="display-1">404</h1>
                            <h2>Page Not Found</h2>
                            <p class="lead">The page you are looking for doesn't exist.</p>
                            <p>Attempted URL: @NavigationManager.ToBaseRelativePath(NavigationManager.Uri)</p>
                            <a href="/" class="btn btn-primary">Go Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
    </Router>
</CascadingAuthenticationState>

@inject NavigationManager NavigationManager

<style>
    .page-not-found {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }
    
    .page-not-found .display-1 {
        font-size: 6rem;
        color: #6c757d;
    }
    
    .page-not-found h2 {
        color: #495057;
        margin-bottom: 1rem;
    }
    
    .page-not-found .lead {
        color: #6c757d;
        margin-bottom: 2rem;
    }
</style>
