                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Equipment</th>
                                                <th>Serial Number</th>
                                                <th>Calibration Date</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
