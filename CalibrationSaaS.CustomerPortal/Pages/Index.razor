                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <div class="fw-semibold">@equipment.Model</div>
                                                <small class="text-muted">@equipment.SerialNumber</small>
                                            </div>
                                            <span class="badge bg-@(equipment.IsOverdue ? "danger" : equipment.IsExpiringSoon ? "warning" : "success")">@equipment.DueStatusText</span>
                                        </div>
                                        <div class="mt-1">
                                            <small class="text-muted">
                                                Due: @equipment.DueDateDisplayText
                                            </small>
                                        </div>
                                    </div>
                                }
                                <div class="text-center mt-3">
                                    <a href="/equipment" class="btn btn-outline-primary btn-sm">
                                        View All Equipment <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                                    <h6>No Upcoming Due Dates</h6>
                                    <p class="text-muted">All equipment is current.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="text-center py-5">
                <i class="fas fa-lock fa-4x text-muted mb-4"></i>
                <h2>Access Required</h2>
                <p class="lead text-muted">Please log in to access your dashboard.</p>
                <a href="@GetLoginUrl()" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Login to Continue
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

