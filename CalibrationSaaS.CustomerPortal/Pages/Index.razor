@page "/index"
@page "/"
@page "/{__tenant__}/index"
@using CalibrationSaaS.CustomerPortal.Services.Authentication
@using CalibrationSaaS.CustomerPortal.Models.Certificates
@using CalibrationSaaS.CustomerPortal.Models.Equipment
@inject ICustomerAuthenticationService AuthService
@inject NavigationManager Navigation

<PageTitle>Dashboard - CalibrationSaaS Customer Portal</PageTitle>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="dashboard-title">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Dashboard
                </h1>
                <p class="dashboard-subtitle text-muted">
                    Welcome to your CalibrationSaaS Customer Portal
                </p>
            </div>
            <div class="col-md-4 text-end">
                <div class="dashboard-date">
                    <i class="fas fa-calendar-alt me-2"></i>
                    @DateTime.Now.ToString("MMMM dd, yyyy")
                </div>
            </div>
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            <!-- Quick Stats Cards -->
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card stat-card-primary">
                        <div class="stat-card-body">
                            <div class="stat-icon">
                                <i class="fas fa-certificate"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@totalCertificates</h3>
                                <p class="stat-label">Total Certificates</p>
                            </div>
                        </div>
                        <div class="stat-card-footer">
                            <a href="/certificates" class="stat-link">
                                View All <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card stat-card-warning">
                        <div class="stat-card-body">
                            <div class="stat-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@overdueEquipment</h3>
                                <p class="stat-label">Overdue Equipment</p>
                            </div>
                        </div>
                        <div class="stat-card-footer">
                            <a href="/equipment?status=overdue" class="stat-link">
                                View Details <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card stat-card-info">
                        <div class="stat-card-body">
                            <div class="stat-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@dueSoonEquipment</h3>
                                <p class="stat-label">Due Soon (30 days)</p>
                            </div>
                        </div>
                        <div class="stat-card-footer">
                            <a href="/equipment?status=due-soon" class="stat-link">
                                View Details <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card stat-card-success">
                        <div class="stat-card-body">
                            <div class="stat-icon">
                                <i class="fas fa-tools"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@totalEquipment</h3>
                                <p class="stat-label">Total Equipment</p>
                            </div>
                        </div>
                        <div class="stat-card-footer">
                            <a href="/equipment" class="stat-link">
                                View All <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
