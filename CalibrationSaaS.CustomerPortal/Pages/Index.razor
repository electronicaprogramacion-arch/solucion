                                        View All Certificates <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-certificate fa-3x text-muted mb-3"></i>
                                    <h6>No Recent Certificates</h6>
                                    <p class="text-muted">Your recent calibration certificates will appear here.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Upcoming Due Dates
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (isLoading)
                            {
                                <div class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            }
                            else if (upcomingDueDates?.Any() == true)
