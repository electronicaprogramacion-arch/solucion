@using CalibrationSaaS.Application.Services
@using CalibrationSaaS.Domain.Aggregates.Entities
@using CalibrationSaaS.Infraestructure.Blazor.Pages.MetCalIntegration
@inherits MetCalImportModalBase

<!-- MET/CAL Import Modal -->
<div class="modal fade @(IsVisible ? "show" : "")" id="metCalImportModal" tabindex="-1" 
     style="display: @(IsVisible ? "block" : "none")" aria-labelledby="metCalImportModalLabel" aria-hidden="@(!IsVisible)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="metCalImportModalLabel">
                    <i class="fas fa-download"></i> Import MET/CAL Electrical Calibration Data
                </h5>
                <button type="button" class="btn-close" @onclick="CloseModal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (IsLoading)
                {
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">@LoadingMessage</p>
                        @if (ShowProgressBar)
                        {
                            <div class="progress mt-3">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                     role="progressbar" style="width: @(ProgressPercentage)%" 
                                     aria-valuenow="@ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                    @ProgressPercentage%
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <!-- Connection Settings -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0">MET/CAL Server Connection</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="serverUrl" class="form-label">Server URL</label>
                                    <input type="text" id="serverUrl" class="form-control" @bind="ServerUrl" 
                                           placeholder="http://metcal-server:8080" />
                                </div>
                                <div class="col-md-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" id="username" class="form-control" @bind="Username" />
                                </div>
                                <div class="col-md-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password" class="form-control" @bind="Password" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button type="button" class="btn btn-outline-primary" @onclick="TestConnection">
                                        <i class="fas fa-plug"></i> Test Connection
                                    </button>
                                    @if (ConnectionStatus != null)
                                    {
                                        <span class="ms-2">
                                            @if (ConnectionStatus.Success)
                                            {
                                                <span class="text-success">
                                                    <i class="fas fa-check-circle"></i> Connected (Version: @ConnectionStatus.ServerVersion)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">
                                                    <i class="fas fa-times-circle"></i> @ConnectionStatus.ErrorMessage
                                                </span>
                                            }
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Procedure Selection -->
                    @if (ConnectionStatus?.Success == true)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">Calibration Procedure</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label for="procedureSelect" class="form-label">Select Procedure</label>
                                        <select id="procedureSelect" class="form-select" @bind="SelectedProcedureName">
                                            <option value="">-- Select a procedure --</option>
                                            @if (AvailableProcedures?.Any() == true)
                                            {
                                                @foreach (var procedure in AvailableProcedures)
                                                {
                                                    <option value="@procedure.Name">
                                                        @procedure.Name - @procedure.Description
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end">
                                        <button type="button" class="btn btn-outline-secondary" @onclick="LoadProcedures">
                                            <i class="fas fa-refresh"></i> Refresh
                                        </button>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(SelectedProcedureName))
                                {
                                    var selectedProc = AvailableProcedures?.FirstOrDefault(p => p.Name == SelectedProcedureName);
                                    @if (selectedProc != null)
                                    {
                                        <div class="mt-3">
                                            <small class="text-muted">
                                                <strong>Type:</strong> @selectedProc.Type<br />
                                                <strong>Electrical:</strong> @(selectedProc.IsElectrical ? "Yes" : "No")<br />
                                                <strong>Supported Units:</strong> @string.Join(", ", selectedProc.SupportedUnits)
                                            </small>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }

                    <!-- Import Options -->
                    @if (!string.IsNullOrEmpty(SelectedProcedureName))
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">Import Options</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="overwriteExisting" @bind="OverwriteExisting" />
                                    <label class="form-check-label" for="overwriteExisting">
                                        Overwrite existing test points
                                    </label>
                                    <div class="form-text">
                                        If checked, any existing test point data will be replaced. If unchecked, import will fail if test points already exist.
                                    </div>
                                </div>
                                @if (HasExistingTestPoints && !OverwriteExisting)
                                {
                                    <div class="alert alert-warning mt-2" role="alert">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        This work order detail already has test point data. Enable "Overwrite existing test points" to replace it.
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Import Results -->
                    @if (ImportResult != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Import Results</h6>
                            </div>
                            <div class="card-body">
                                @if (ImportResult.Success)
                                {
                                    <div class="alert alert-success" role="alert">
                                        <i class="fas fa-check-circle"></i>
                                        <strong>Import Successful!</strong><br />
                                        @ImportResult.ImportSummary
                                    </div>
                                    
                                    @if (ImportResult.ImportedTestPoints?.Any() == true)
                                    {
                                        <h6>Imported Test Points (@ImportResult.ImportedRecordsCount):</h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var testPoint in ImportResult.ImportedTestPoints)
                                            {
                                                <li class="list-group-item">@testPoint</li>
                                            }
                                        </ul>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa-times-circle"></i>
                                        <strong>Import Failed!</strong><br />
                                        @ImportResult.ErrorMessage
                                    </div>
                                }

                                @if (ImportResult.Warnings?.Any() == true)
                                {
                                    <div class="alert alert-warning mt-2" role="alert">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <strong>Warnings:</strong>
                                        <ul class="mb-0 mt-1">
                                            @foreach (var warning in ImportResult.Warnings)
                                            {
                                                <li>@warning</li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="modal-footer">
                @if (!IsLoading)
                {
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="StartImport" 
                            disabled="@(!CanStartImport)">
                        <i class="fas fa-download"></i> Import Data
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-danger" @onclick="CancelImport">
                        <i class="fas fa-stop"></i> Cancel
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public int WorkOrderDetailId { get; set; }
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnImportComplete { get; set; }
}
