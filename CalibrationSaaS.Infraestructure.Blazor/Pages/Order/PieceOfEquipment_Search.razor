    <GridHeader>
        <th width="5%">ID</th>
        @*<th>Equipment Number</th>*@
        <th>Serial Number</th>
        <th>Capacity</th>
        <th>Status</th>

    </GridHeader>

   
    <GridRow>


        @*<td><NavLink class="btn btn-success btn-sm" href="@linkDetail">@item.UserID</NavLink></td>*@



        @*<td>@context.EquipmentTemplateId</td>*@
        <td>@context.SerialNumber</td>
        <td>@context.Capacity</td>
        <td>@context.Status</td>

    </GridRow>


    <GridSelect>
        <div>
            <button class="btn btn-primary btn-sm"
                    @onclick=@(async () => await GetDetail(context.PieceOfEquipmentId)) @onclick:stopPropagation @onclick:preventDefault>
                View
            </button>
        </div>
    </GridSelect>
    <GridEdit>
        <td><NavLink class="btn btn-success btn-sm" href="@searchComponent.CreateUrl(context.PieceOfEquipmentId.ToString())">Edit</NavLink></td>
    </GridEdit>
    <GridDelete>
        <td>
            <div>
                <button class="btn btn-primary btn-sm"
                        @onclick=@(async () => await Delete(context)) @onclick:stopPropagation @onclick:preventDefault>
                    Delete
                </button>
            </div>
            @*<NavLink class="btn btn-success btn-sm" href="@Delete(context)">Delete</NavLink>*@
        </td>

    </GridDelete>


</CalibrationSaaS.Infraestructure.Blazor.Pages.Base.Search>






