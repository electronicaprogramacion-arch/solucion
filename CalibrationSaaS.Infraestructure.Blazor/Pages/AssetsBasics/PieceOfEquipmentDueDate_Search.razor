@page "/PieceOfEquipmentDueDateSearch"
@using CalibrationSaaS.Infraestructure.Blazor.Pages.AssetsBasics
@inherits PieceOfEquipment_SearchBase

<div class="card shadow mb-4">
    <div class="card-header py-0">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="btn btn-primary" @onclick=@(async () => await ReturnModal())>Select</button>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a class="nav-link disabled" href="#"></a>
                    </li>
                </ul>
                @*<form class="form-inline my-2 my-lg-0">
                    <input @bind-value="SearchTerm" @bind-value:event="oninput" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>

                </form>*@
            </div>
        </nav>

    </div>


    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th width="5%">ID</th>
                        @*<th>Equipment Number</th>*@
                        <th>Serial Number</th>
                        <th>Capacity</th>
                        <th>Status</th>
                        <th>Due Date</th>
                        <th>Select</th>
                    </tr>
                </thead>
                
                <tbody>

                    @foreach (var item in _pieceOfEquipmentsDueDate)
                    {
                        @if (item.DueDate < DateTime.Now)
                        {
                            classPieceOfEquipment = "table-danger";
                        }
                        else if (item.DueDate < DateTime.Now.AddMonths(1))
                        {
                            classPieceOfEquipment = "table-warning";
                        }
                        else
                        {
                            classPieceOfEquipment = "table-light";
                        }

                    <tr class="@classPieceOfEquipment">
                        <td>@item.PieceOfEquipmentID</td>
                        <td>@item.SerialNumber</td>
                        <td>@item.Capacity</td>
                        <td>@item.Status</td>
                        <td>@item.DueDate</td>
                        <!--<td><TextInput Label="Certificate #" @bind-Value="item.PieceOfEquipmentId" Validate="false" ValidationFor="@(() => item.PieceOfEquipmentId)"  Type="@CalibrationSaaS.Blazor.Controls.Types.Switch"  >
                            </TextInput>
                        </td>-->
                             @*<div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="customSwitch1" @onclick=@(async () => await addToListPoE(@item.PieceOfEquipmentId))>
                                <label class="custom-control-label" for="customSwitch2"></label>
                            </div>*@
                        
                       
                        <input type="checkbox" name="cb" value="@item.PieceOfEquipmentID" @onclick=@(async () => await addToListPoE(@item.PieceOfEquipmentID))>
                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {

    string classPieceOfEquipment;

}
