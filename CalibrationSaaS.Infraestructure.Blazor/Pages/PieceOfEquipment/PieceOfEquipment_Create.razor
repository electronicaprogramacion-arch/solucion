@page "/CreatePieceOfEquipment"
@inherits PieceOfEquipment_CreateBase

<h3>Create Customer</h3>

<div class="card mb-3">
    <div class="row no-gutters">
        
        <div class="col-md-8">
            <EditForm Model="@pieceOfEquipment" style="margin:10px" OnValidSubmit="CreatePieceOfEquipment">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label for="inputAddress2">Company ID Number</label>
                            <label aria-describedby="passwordHelpInline" style="color:crimson">USR-45641-13</label>
                            <small id="passwordHelpInline" class="text-muted">
                                This unique identifier number will be autogenerated.
                            </small>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleFormControlSelect51">Customer</label>
                        <select id="exampleFormControlSelect51" class="form-control">
                            <option>Eng LLC</option>
                            <option>Mechanics Inc</option>
                            <option>Precision LLC</option>
                            <option>Industrial Corp</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputAddress">Serial Number</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="Serial Number">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputAddress">Install Location</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="Install Location">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">Client Reference Number / Customer Tool ID</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Equipment Type</label>
                        <select id="inputState" class="form-control">
                            <option selected>Balance</option>
                            <option>Bench Scale</option>
                            <option>Belt Scales</option>
                            <option>Counting Scales</option>
                            <option>Crane Scales</option>
                            <option>Digital Displays</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputZip">Unit of Measure</label>
                        <select id="inputState" class="form-control">
                            <option selected>Pound</option>
                            <option>Kg</option>
                            <option>Mg</option>
                            <option>gram</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputCity">Capacity</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Class</label>
                        <select id="inputState" class="form-control">
                            <option selected>I</option>
                            <option>II</option>
                            <option>III</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputZip">Platform size</label>
                        <select id="inputState" class="form-control">
                            <option selected>24" x 24"</option>
                            <option>12" x 12"</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputState">Resolution (decimals)</label>
                        <select id="inputState" class="form-control">
                            <option selected>0</option>
                            <option>0.1</option>
                            <option>0.01</option>
                            <option>0.001</option>
                            <option>0.0001</option>
                            <option>0.00001</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Accuracy %</label>
                        <select id="inputState" class="form-control">
                            <option selected>0</option>
                            <option>0.1</option>
                            <option>0.01</option>
                            <option>0.001</option>
                            <option>0.0001</option>
                            <option>0.00001</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputZip">Tolerance Type</label>
                        <select id="inputState" class="form-control">
                            <option selected>Percentage</option>
                            <option>Average</option>
                            <option>Nominal</option>
                            <option>Percentage + Factor</option>
                        </select>
                    </div>
                </div>


                <button class="btn btn-primary" type="submit">Create Piece Of Equipment</button>
            </EditForm>
        </div>
    </div>
</div>
<div id="dvModalCreatePieceOfEquipment">
    <StandardModal @ref="child"></StandardModal>
   
</div>

